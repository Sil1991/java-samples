<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>

	<form-beans>
		<form-bean name="loginForm" type="net.lshimokawa.ejemplos.struts.LoginForm"></form-bean>
	</form-beans>

	<action-mappings>
		<action path="/Login" type="net.lshimokawa.ejemplos.struts.LoginAction" name="loginForm">
			<forward name="bienvenida" path="/WEB-INF/jsp/bienvenida.jsp"></forward>
		</action>
	</action-mappings>

</struts-config>